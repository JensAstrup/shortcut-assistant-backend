{
  "name": "shortcut-assistant-backend",
  "version": "3.2.0",
  "description": "The backend service powering the Shortcut Assistant browser extension.",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "start:dev": "ts-node-dev --env-file .env.local --transpile-only --loader ts-node/esm -r tsconfig-paths/register src/server.ts",
    "build": "tsc && npm run build:copy-db-assets && npm run build:replace-paths",
    "build:copy-db-assets": "cp -r src/migrations dist/migrations && cp -r src/entities dist/entities",
    "build:replace-paths": "tscpaths -p tsconfig.json -s ./src -o ./dist/src",
    "lint": "eslint src tests",
    "test": "NODE_ENV=test node --env-file .env.test node_modules/.bin/jest",
    "test:coverage": "node --env-file .env.test node_modules/.bin/jest --coverage --coverageDirectory=coverage",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@sentry/node": "^8.9.2",
    "@sentry/profiling-node": "^8.9.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "datadog-winston": "^1.6.0",
    "express": "^4.19.2",
    "openai": "^4.44.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "shortcut-api": "^4.1.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.5",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jens_astrup/tscpaths": "^0.0.11",
    "@jest-mock/express": "^2.1.0",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/datadog-winston": "^1.0.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "8.57.0",
    "eslint-config-yenz": "^5.3.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-perfectionist": "^2.10.0",
    "jest": "^29.7.0",
    "jest-mock-express": "^0.1.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
