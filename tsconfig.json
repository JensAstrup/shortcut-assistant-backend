{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["es6"],
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "@sb/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "plugins": [
    "@typescript-eslint"
  ]
}
